{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="middle-container row">
        <div class="middle-content col-12 col-md-8 col-lg-6">

            <h3 class="font-weight-normal text-center mb-4">Crée ton compte pour profiter de BroLight !</h3>

            {{ form_start(registrationForm) }}

            <div class="form-group">
                {{ form_label(registrationForm.email, 'Ton email :') }}
                {{ form_widget(registrationForm.email, { 'attr': {'class': form_errors(registrationForm.email) ? 'form-control is-invalid' : 'form-control'} }) }}
                {% if form_errors(registrationForm.email) %}
                    <div class="invalid-feedback">Un compte est déjà enregistré avec cet email.</div>
                {% else %}
                    <small id="emailHelp" class="form-text text-muted">T'inquiète, ton email ne sera pas communiqué.</small>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.username, 'Ton super pseudo :') }}
                {{ form_widget(registrationForm.username, { 'attr': {'class': form_errors(registrationForm.username) ? 'form-control is-invalid' : 'form-control'} }) }}
                {% if form_errors(registrationForm.username) %}
                    <div class="invalid-feedback">Un compte est déjà enregistré avec ce pseudo.</div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Ton mot de passe top secret :') }}
                {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, 'Je suis d\'accord avec les conditions d\'utilisation.') }}
            </div>

            <button type="submit" class="btn btn-block btn-primary text-center">Register</button>
            {{ form_end(registrationForm) }}

            <hr>

            <a href="{{ path('app_login') }}" class="float-right">J'ai déjà un compte !</a>

        </div>
    </div>

{% endblock %}
